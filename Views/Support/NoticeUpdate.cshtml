@{
    ViewData["Title"] = "공지 수정";
}

@model NoticeViewModel;

<head>
    <link rel="stylesheet" href="~/css/boardCreate.css" />
</head>

<div style="background-color: #8E8E8E; height: 70px">
    <div class="container">
        <p style="line-height: 70px; margin-left: 80px"><a style="color: black;" asp-controller="Home" asp-action="Index">Hospi 홈</a> > <a style="color: black;" asp-controller="Support" asp-action="Notice">공지사항</a> > 공지 수정</p>
    </div>
</div>

<div class="container" style="margin-top:50px; margin-bottom: 150px;">
    <form method="post" asp-controller="Support" asp-action="NoticeUpdateProcess" enctype="multipart/form-data">
        <div class="form-group" style="width: 80%; margin: 0 auto;">
            <h4 style="margin-top: 70px; margin-bottom: 50px">공지 수정</h4>
            <table class="table">
                <tbody>
                    <tr>
                        <th scope="row">제목</th>
                        <td>
                            <input type="text" class="form-control" id="title" asp-for="Title" style="width: 100%" value="@Model.Title" />
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">내용</th>
                        <td>
                            <textarea type="text" rows="10" class="form-control" id="content" asp-for="Content" style="width: 100%; resize: none;">@Model.Content</textarea>
                        </td>
                    </tr>
                </tbody>
            </table>
            <input type="hidden" asp-for="No" value="@Model.No" />
        </div>
        <div class="form-group" style="width: 80%; margin: 0 auto; text-align: end">
            <a href='javascript:history.go(-1)' class="btn btn-dark">취소</a>
            <button class="btn btn-dark" type="submit">
                수정
            </button>
        </div>
    </form>
</div>